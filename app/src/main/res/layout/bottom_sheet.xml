<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottpm_sheet"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_camera"

        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_camera_24dp"
            android:tint="@color/color_accent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take from camera"
            android:layout_marginStart="16dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_gallery"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_photo_library_24dp"
            android:tint="@color/color_accent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take from gallery"
            android:layout_marginStart="16dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_edit"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_crop_24dp"
            android:tint="@color/color_accent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit avatar"
            android:layout_marginStart="16dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_delete"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete_forever_24dp"
            android:tint="@color/color_accent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove avatar"
            android:layout_marginStart="16dp"/>

    </LinearLayout>


</LinearLayout>